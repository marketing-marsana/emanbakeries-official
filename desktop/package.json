{
    "name": "eman-bakery-360-desktop",
    "version": "1.0.0",
    "description": "Desktop wrapper for Eman Bakery 360",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder --win nsis"
    },
    "author": "Eman Bakery",
    "license": "ISC",
    "devDependencies": {
        "electron": "^31.0.0",
        "electron-builder": "^24.13.3"
    },
    "build": {
        "appId": "com.emanbakery.portal",
        "productName": "Eman Bakery 360",
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "directories": {
            "output": "dist"
        },
        "compression": "store"
    }
}